<div class="home-container">
  <!-- Welcome Banner -->
  <section class="welcome-banner">
    <h1>Welcome to CSE Motors!</h1>
  </section>

  <%- messages() %>

  <!-- Hero Section with DMC Delorean -->
  <section class="hero-section">
    <div class="hero-text">
      <h2>DMC Delorean</h2>
      <ul class="features-list">
        <li>3 Cup holders</li>
        <li>Superman doors</li>
        <li>Fuzzy dice!</li>
      </ul>
      <a href="/inv/detail/1" class="btn-own-today">
        <img src="/images/site/own_today.png" alt="Own Today" onerror="this.parentElement.innerHTML='<button class=btn-primary>Own Today</button>'">
      </a>
    </div>
    <div class="hero-image">
      <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
    </div>
  </section>

  <!-- Main Content Grid (Upgrades + Reviews) -->
  <section class="main-content-grid">
    <!-- Upgrades Section -->
    <div class="upgrades-section">
      <h2>Delorean Upgrades</h2>
      <div class="upgrades-grid">
        <div class="upgrade-item">
          <a href="/upgrades/flux-capacitor">
            <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
            <h3>Flux Capacitor</h3>
          </a>
        </div>
        <div class="upgrade-item">
          <a href="/upgrades/flame-decals">
            <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
            <h3>Flame Decals</h3>
          </a>
        </div>
        <div class="upgrade-item">
          <a href="/upgrades/bumper-stickers">
            <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
            <h3>Bumper Stickers</h3>
          </a>
        </div>
        <div class="upgrade-item">
          <a href="/upgrades/hub-caps">
            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
            <h3>Hub Caps</h3>
          </a>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section">
      <h2>DMC Delorean Reviews</h2>
      <ul class="reviews-list">
        <li>"So fast it's almost like traveling in time." (4/5)</li>
        <li>"Coolest ride on the road!" (4/5)</li>
        <li>"I'm feeling McFly!" (5/5)</li>
        <li>"The most futuristic ride of our day!" (4.5/5)</li>
        <li>"80's livin and I love it!" (5/5)</li>
      </ul>
    </div>
  </section>
</div>